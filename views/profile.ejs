<!doctype html>
<html>
<head>
    <title>Digital Innovations</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Muli' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/style.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="text-center">
        <h1 class="fontwork2"><span class="fa fa-github-alt fa1"></span> PROFILE PAGE</h1>
        <a href="/logout" class="btn btn-default btn-sm"><span class="fa fa-hand-o-right"></span> LOGOUT</a>
    </div>

    <div class="row row-centered">

        <!-- LOCAL INFORMATION -->
        <div class="col-xs-6 col-centered">
            <div class="well profilebox">
                <h3 class="fontwork2 centertext"><span class="fa fa-user fa1"></span> USER INFO</h3>

                <% if (user.local.email) { %>
                    <p class="fontwork3 centertext">
                        <strong>First Name</strong>: <%= user.local.firstname %><br>
                        <strong>Last Name</strong>: <%= user.local.lastname %><br>
                        <strong>Email</strong>: <%= user.local.email %><br>
                        <strong>Birthday</strong>: <%= user.local.birthday %>
                    </p>
                    
                  <!--  <a href="/unlink/local" class="btn btn-default"><span class="fa fa-ellipsis-h"></span> UNLINK</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %> -->

            </div>
        </div>
    </div>

</div>
</body>
</html>
